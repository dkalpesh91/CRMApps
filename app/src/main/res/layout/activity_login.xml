<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#36474f"
    android:showAsAction="never"
    tools:context="com.sfamobile.dahlia.sfamobile.Activity.LoginActivity"
   >




    <TextView android:text="Login Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_title"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_username_hint"
        android:hint="Enter Name"
        android:focusable="true"
        android:textColorHighlight="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_marginTop="90dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/login_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
        android:id="@+id/enter_password_hint"
        android:layout_below="@+id/enter_username_hint"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/enter_username_hint"
        android:layout_alignEnd="@+id/enter_username_hint"
        android:textColorHint="#ffffff"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Forgot password ?"
        android:textSize="12dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/forgotpassword_button"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:background="#36474f"
        android:textStyle="normal"
        android:layout_below="@+id/login_button"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="login"
        android:textAllCaps="false"
        android:textSize="21dp"
        android:id="@+id/login_button"
        android:textColor="#ffffff"
        android:background="@drawable/buttonshape"
        android:textStyle="normal"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/enter_password_hint"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:text="Create an account"
        android:textAllCaps="false"
        android:id="@+id/register_button"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="#36474f"
        android:textStyle="normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>

