<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36474f">
    <!--
         this is a comment
     -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/meetingInfo"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/clientName" />

    <TextView
        android:id="@+id/clientName"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="17dip"
        android:paddingTop="5dp"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:layout_alignLeft="@+id/remainder"
        android:layout_alignStart="@+id/remainder" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/Location"
        android:textColor="#ffffff"
        android:layout_below="@+id/meetingInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="190dp"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:id="@+id/remainder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Client Name"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/clientName"
        android:layout_toStartOf="@+id/clientName" />


</RelativeLayout>
