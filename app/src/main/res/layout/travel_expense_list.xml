<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimary"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dim_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dim_50"
            android:layout_height="@dimen/dim_50"
            android:src="@drawable/own_two_wheeler"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tel_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, Sept 25, 08:06 PM"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_18"/>

            <TextView
                android:id="@+id/tel_modeof_travel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tel_date_tv"
                android:layout_marginTop="@dimen/dim_8"
                android:text="Mode of travel -"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_18"/>


            <TextView
                android:id="@+id/tel_amount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/amount_175"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_18"/>

            <TextView
                android:id="@+id/tel_modeof_travel_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tel_date_tv"
                android:layout_marginTop="@dimen/dim_8"
                android:text="Two-wheeler(Self-Own)"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_18"/>


        </RelativeLayout>
    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dim_1"-->
        <!--android:layout_marginTop="@dimen/dim_10"-->
        <!--android:background="@drawable/dotted"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dim_60"
        android:layout_marginTop="@dimen/dim_10">

        <ImageView
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:src="@drawable/green_loc"/>



        <TextView
            android:id="@+id/tel_start_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amenora Park Town , Pune"
            android:textColor="@color/colorsilver"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_10"
            android:textSize="@dimen/dim_16"/>


    </LinearLayout>


    <View
        android:layout_width="@dimen/dim_1"
        android:layout_height="@dimen/dim_30"
        android:layout_marginLeft="@dimen/dim_75"
        android:background="@color/colorWhite"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dim_60"
        android:layout_marginBottom="@dimen/dim_10">

        <ImageView
            android:layout_width="@dimen/dim_30"
            android:layout_height="@dimen/dim_30"
            android:src="@drawable/red_loc"/>



        <TextView
            android:id="@+id/tel_end_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nachiket Park Road, Baner, Pune"
            android:textColor="@color/colorsilver"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_10"
            android:textSize="@dimen/dim_16"/>


    </LinearLayout>


</LinearLayout>