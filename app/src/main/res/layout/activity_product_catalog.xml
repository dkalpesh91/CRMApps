<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include
        android:id="@+id/dsvr_top_bar"
        layout="@layout/top_bar_without_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_5"
        android:layout_below="@+id/dsvr_top_bar"
        android:background="@color/view_line" />

    <ListView
        android:id="@+id/product_catalog_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_quotation_btn"
        android:layout_below="@+id/dsvr_top_bar"
        android:layout_margin="@dimen/dim_12"
        android:background="@color/colorPrimary"
        android:dividerHeight="@dimen/dim_12">

    </ListView>

    <Button
        android:id="@+id/create_quotation_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_38"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dim_10"
        android:background="@drawable/button_selector"
        android:paddingLeft="@dimen/dim_10"
        android:paddingRight="@dimen/dim_10"
        android:text="@string/catalog_create_quotation"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dim_24" />

</RelativeLayout>
