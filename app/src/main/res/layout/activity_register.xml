<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#36474f"
        android:showAsAction="never"
        tools:context=".MainActivity" >

        <Button
            android:id="@+id/back_button"
            android:text="Back"
            android:textSize="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:id="@+id/edit_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:hint="User Name"
            android:textSize="17dp"
            android:textColorHint="#ffffff"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:layout_above="@+id/edit_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:singleLine="true"
            android:layout_above="@+id/edit_ConformPassword"
            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edit_ConformPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="17dp"
            android:layout_above="@+id/edit_Email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/edit_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/Mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="10"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:hint="Mobile Number"
            android:textSize="17dp"
            android:inputType="phone"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/edit_Email"
            android:layout_alignLeft="@+id/register_label"
            android:layout_alignStart="@+id/register_label" />


        <EditText
            android:id="@+id/Company_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:textSize="17dp"
            android:hint="Company Name"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/Mobile_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/register_button2"
            android:text="Register"
            android:background="@drawable/buttonshape"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Register"
            android:textColor="#ffffff"
            android:id="@+id/register_label"
            android:layout_alignTop="@+id/back_button"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/code"
            android:hint="@string/country_code"
            android:textSize="17dp"
            android:maxLength="2"
            android:textColor="#ffffff"
            android:layout_above="@+id/Company_Name"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2dp"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff"
            android:layout_toStartOf="@+id/register_label"
            android:layout_toLeftOf="@+id/register_label" />


    </RelativeLayout>
</LinearLayout>


