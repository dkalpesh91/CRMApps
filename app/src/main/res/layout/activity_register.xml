<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/dim_16"
        android:paddingLeft="@dimen/dim_16"
        android:paddingRight="@dimen/dim_16"
        android:paddingTop="@dimen/dim_16"
        android:showAsAction="never"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/back_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/buttonshape"
            android:text="Back"
            android:textColor="@color/colorWhite"
            android:textSize="10dp" />


        <EditText
            android:id="@+id/edit_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/edit_Username_register"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp" />


        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_ConformPassword"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
            android:hint="@string/edit_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edit_ConformPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_Email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="@string/edit_ConformPassword"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/edit_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="@string/edit_Email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/Mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_label"
            android:layout_alignStart="@+id/register_label"
            android:layout_below="@+id/edit_Email"
            android:ems="10"
            android:hint="@string/Mobile_number"
            android:inputType="phone"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp" />


        <EditText
            android:id="@+id/Company_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Mobile_number"
            android:ems="10"
            android:hint="@string/Company_Name"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp" />

        <Button
            android:id="@+id/register_button2"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buttonshape"
            android:text="@string/register_button2"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/register_label"
            android:layout_width="@dimen/dim_120"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/back_button"
            android:layout_centerHorizontal="true"
            android:text="@string/register_button2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite" />

        <EditText
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Company_Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/register_label"
            android:layout_toStartOf="@+id/register_label"
            android:hint="@string/country_code"
            android:maxLength="2"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="17dp" />


    </RelativeLayout>
</LinearLayout>


