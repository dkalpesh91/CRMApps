<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/dsvr_top_bar"
            layout="@layout/top_bar_without_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/old_pwd_til"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dsvr_top_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dim_17"
            android:layout_marginRight="@dimen/dim_17"
            android:layout_marginTop="@dimen/dim_25"
            android:paddingLeft="@dimen/dim_22"
            android:paddingRight="@dimen/dim_22">

            <AutoCompleteTextView
                android:id="@+id/old_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/one_time_pwd_atv_hint_str"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_20" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_pwd_til"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/old_pwd_til"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dim_17"
            android:layout_marginRight="@dimen/dim_17"
            android:layout_marginTop="@dimen/dim_15"
            android:paddingLeft="@dimen/dim_22"
            android:paddingRight="@dimen/dim_22">

            <AutoCompleteTextView
                android:id="@+id/new_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_pwd_atv_hint_str"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_20" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirm_pwd_til"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_pwd_til"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dim_17"
            android:layout_marginRight="@dimen/dim_17"
            android:layout_marginTop="@dimen/dim_15"
            android:paddingLeft="@dimen/dim_22"
            android:paddingRight="@dimen/dim_22">

            <AutoCompleteTextView
                android:id="@+id/confirm_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_pwd_atv_hint_str"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_20" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_35"
            android:layout_below="@+id/confirm_pwd_til"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dim_33"
            android:layout_marginRight="@dimen/dim_33"
            android:layout_marginTop="@dimen/dim_18"
            android:background="@drawable/button_selector"
            android:text="@string/reset_pwd_btn_str"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_20" />

        <!--</RelativeLayout>-->
    </RelativeLayout>
</ScrollView>