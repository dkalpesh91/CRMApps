<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/dim_20"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reset_pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/reset_pwd_tv_str"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/dim_50"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/old_pwd_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reset_pwd_tv"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginRight="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_25"
            style="@style/TextLabel">

            <AutoCompleteTextView
                android:id="@+id/old_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18dp"
                android:textColor="@color/colorWhite"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/new_pwd_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/old_pwd_til"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginRight="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_10"
            style="@style/TextLabel">

            <AutoCompleteTextView
                android:id="@+id/new_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_pwd_atv_hint_str"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18dp"
                android:textColor="@color/colorWhite"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirm_pwd_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/new_pwd_til"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginRight="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_10"
            style="@style/TextLabel">

            <AutoCompleteTextView
                android:id="@+id/confirm_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/confirm_pwd_atv_hint_str"
                android:inputType="textPassword"
                android:imeOptions="actionGo"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="18dp"
                android:textColor="@color/colorWhite"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/confirm_pwd_til"
            android:layout_marginLeft="@dimen/dim_15"
            android:layout_marginRight="@dimen/dim_15"
            android:layout_marginTop="@dimen/dim_18"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:text="@string/reset_pwd_btn_str"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorWhite"/>

        <!--</RelativeLayout>-->
    </RelativeLayout>
</ScrollView>