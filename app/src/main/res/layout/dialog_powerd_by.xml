<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:gravity="center_horizontal"
                android:background="@drawable/rounded_border">

    <ImageView
        android:id="@+id/cancle_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cancle_icon"/>

    <LinearLayout
        android:id="@+id/details_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancle_img"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/dahlia_comapny_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/dahlia_logo_icon"/>

            <Button
                android:id="@+id/dahlia_uri_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                android:text="@string/uri_dahlia_technologies"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="16dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/sfa_mobi_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/sfa_mobi_white_logo"/>

            <Button
                android:id="@+id/sfamobi_uri_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:text="@string/uri_sfamobi"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="16dp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>