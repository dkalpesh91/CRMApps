<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/atugm_top_bar"
        layout="@layout/top_bar_without_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:id="@+id/fragment1"
        android:name="com.sfamobile.dahlia.sfamobile.Fragments.WorkaroundMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/atugm_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_below="@+id/atugm_top_bar"
        android:layout_marginLeft="@dimen/dim_10"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dim_35"
            android:layout_height="@dimen/dim_35"
            android:background="@drawable/distance1" />

        <TextView
            android:id="@+id/distance_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:text="00"
            android:textColor="@color/colorPink" />

        <ImageView
            android:layout_width="@dimen/dim_35"
            android:layout_height="@dimen/dim_35"
            android:layout_marginLeft="@dimen/dim_15"
            android:background="@drawable/time" />

        <TextView
            android:id="@+id/duration_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:text="o min"
            android:textColor="@color/colorPink" />

    </LinearLayout>


    <Button
        android:id="@+id/atugm_start_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_33"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dim_10"
        android:background="@drawable/button_selector"
        android:paddingLeft="@dimen/dim_8"
        android:paddingRight="@dimen/dim_8"
        android:text="End Journey"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />


</RelativeLayout>
