<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#36474f">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headerText"
        android:textColor="#ffffff"
        android:id="@+id/headerText"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enter_meeting"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="Meeting Title"
        android:textSize="18dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_below="@+id/headerText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_client_name"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_marginBottom="12dp"
        android:hint="Client Name"
        android:layout_above="@+id/enter_meeting_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter_meeting_info"
        android:maxLength="200"
        android:maxLines="2"
        android:textSize="18dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:hint="Meeting Info"
        android:layout_above="@+id/location"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="14dp"
        android:hint="Location"
        android:textSize="18dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/enter_meeting_info"
        android:layout_alignEnd="@+id/enter_meeting_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/select_Date"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:hint="Date"
        android:editable="false"
        android:inputType="none"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/headerText"
        android:layout_toLeftOf="@+id/headerText" />

    <EditText
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/Enter_time"
        android:textSize="18dp"
        android:editable="false"
        android:inputType="none"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:hint="Time"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_alignTop="@+id/select_time"
        android:layout_toLeftOf="@+id/select_time"
        android:layout_toStartOf="@+id/select_time" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/select_date"
        android:src="@drawable/calendar_add_meetings"
        android:layout_above="@+id/spinner"
        android:layout_toRightOf="@+id/select_Date"
        android:layout_toEndOf="@+id/select_Date" />

    <ImageButton
        android:layout_width="67dp"
        android:layout_height="90dp"
        android:id="@+id/select_time"
        android:src="@drawable/clockn1"
        android:background="#36474f"
        android:layout_alignBottom="@+id/select_Date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/location" />
    <TextView
        android:id="@+id/displayDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Date will appear here after being selected"
        android:textSize="30sp"
        android:layout_toLeftOf="@+id/select_date"
        android:layout_toStartOf="@+id/select_date"
        android:layout_above="@+id/enter_meeting" />

    <TextView android:id="@+id/timeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/spinner"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView2" />

    <!-- Spinner Element -->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Enter_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_accept"
        android:background="@drawable/accept_add_meeting"
        android:layout_alignTop="@+id/button_cancel"
        android:layout_toLeftOf="@+id/select_date"
        android:layout_toStartOf="@+id/select_date" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_cancel"
        android:background="@drawable/cancel2"
        android:layout_below="@+id/spinner"
        android:layout_alignRight="@+id/Enter_time"
        android:layout_alignEnd="@+id/Enter_time"
        android:layout_marginTop="41dp" />


</RelativeLayout>
