<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_265"
                android:background="@drawable/rounded_corner_black_background"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_145">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Product Description"
            android:src="@drawable/bag"/>

        <CheckBox
            android:id="@+id/select_item_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_merchant_logo"
            android:layout_width="@dimen/dim_28"
            android:layout_height="@dimen/dim_28"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dim_12"
            android:layout_marginRight="@dimen/dim_12"
            android:contentDescription="Product Description"
            android:src="@drawable/snapdeal_logo"/>

        <RelativeLayout
            android:id="@+id/product_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_12"
                android:layout_marginStart="@dimen/dim_12"
                android:text="Name"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_18"/>

            <TextView
                android:id="@+id/product_name_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_8"
                android:layout_marginStart="@dimen/dim_8"
                android:layout_toEndOf="@+id/product_name_tv"
                android:layout_toRightOf="@+id/product_name_tv"
                android:text="Fashion Women's Handbag"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/dim_18"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/product_id_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_item_rl"
        android:layout_marginTop="@dimen/dim_2">

        <TextView
            android:id="@+id/product_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginStart="@dimen/dim_12"
            android:text="ID"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_18"/>

        <TextView
            android:id="@+id/product_id_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_35"
            android:layout_marginStart="@dimen/dim_35"
            android:layout_toEndOf="@+id/product_id_tv"
            android:layout_toRightOf="@+id/product_id_tv"
            android:text="A3041"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="@dimen/dim_18"/>

        <LinearLayout
            android:id="@+id/layout_btn_show_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_25"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dim_12"
            android:layout_marginRight="@dimen/dim_12"
            android:background="@drawable/rounded_show_price_btn_corner_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_6"
                android:layout_marginStart="@dimen/dim_6"
                android:text="Show Price"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/dim_18"/>

            <ImageView
                android:layout_width="@dimen/dim_10"
                android:layout_height="@dimen/dim_10"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_2"
                android:layout_marginStart="@dimen/dim_2"
                android:contentDescription="content_description"
                android:src="@drawable/ic_menu_send"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/product_id_ll"
        android:layout_marginTop="@dimen/dim_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginStart="@dimen/dim_12"
            android:layout_toLeftOf="@+id/layout_balance"
            android:layout_toStartOf="@+id/layout_balance"
            android:text="Product Description"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_18"/>

        <TextView
            android:id="@+id/product_desc_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/product_desc_tv"
            android:layout_marginLeft="@dimen/dim_12"
            android:layout_marginStart="@dimen/dim_12"
            android:layout_marginTop="@dimen/dim_3"
            android:layout_toLeftOf="@+id/layout_balance"
            android:layout_toStartOf="@+id/layout_balance"
            android:ellipsize="end"
            android:lines="2"
            android:text="Product Description"
            android:textColor="@color/grey"
            android:textSize="@dimen/dim_18"
            android:textStyle="normal"/>

        <LinearLayout
            android:id="@+id/layout_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/available_quantitiy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_6"
                android:layout_marginStart="@dimen/dim_6"
                android:text="Available Quanity "
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dim_15"/>

            <EditText
                android:id="@+id/available_quantitiy_value_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_6"
                android:layout_marginStart="@dimen/dim_6"
                android:inputType="number"
                android:text="50"
                android:textColor="@color/grey"
                android:textSize="@dimen/dim_18"/>


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>