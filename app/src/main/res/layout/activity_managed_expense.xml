<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.sfamobile.dahlia.sfamobile.Activity.ManagedExpenseActivity">

    <include android:id="@+id/dsvr_top_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             layout="@layout/top_bar_layout"/>


    <RelativeLayout
        android:id="@+id/daily_expense_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/dsvr_top_bar"
        android:background="@drawable/expense_gradient">

        <TextView
            android:id="@+id/daily_expense_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Expense"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_24"/>


        <TextView
            android:id="@+id/daily_expense_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_expense_tv"
            android:text="16 Sept 2016"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_21"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20"
            android:layout_marginTop="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dim_6"
            android:layout_below="@+id/daily_expense_tv"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dim_21"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/weekly_expense_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/daily_expense_rl"
        android:background="@drawable/expense_gradient">

        <TextView
            android:id="@+id/weekly_expense_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Expense"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_24"/>


        <TextView
            android:id="@+id/weekly_expense_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weekly_expense_tv"
            android:text="12 Sept 2016 to 18 Sept 2016"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_21"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20"
            android:layout_marginTop="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dim_6"
            android:layout_below="@+id/weekly_expense_tv"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dim_21"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/monthly_expense_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/weekly_expense_rl"
        android:background="@drawable/expense_gradient">

        <TextView
            android:id="@+id/monthly_expense_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Expense"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_24"/>


        <TextView
            android:id="@+id/monthly_expense_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthly_expense_tv"
            android:text="September 2016"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dim_21"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20"
            android:layout_marginTop="@dimen/dim_10"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="@dimen/dim_6"
            android:layout_below="@+id/monthly_expense_tv"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dim_21"/>


    </RelativeLayout>


